<Window x:Class="RemindRestingTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:RemindRestingTime.Helpers"
        mc:Ignorable="d"
        Height="600"
        Width="800"
        WindowState="Maximized"
        Topmost="True"
        helpers:WindowEx.ShowIcon = "false">
    <StackPanel VerticalAlignment="Center">
        <TextBlock TextAlignment="Center"
                   VerticalAlignment="Center"
                   Width="600"
                   FontSize="30"
                   TextWrapping="Wrap"
                   Foreground="#0275d8"
                   Text="You're already using computer on 1 hour. Please take a rest to keep your eyes and body healthy." />

        <TextBlock Text="{Binding CountDownNumber}"
                   FontSize="200"
                   TextAlignment="Center"
                   Foreground="#5cb85c"
                   FontWeight="Bold"/>
        
        <TextBlock TextAlignment="Center"
                   VerticalAlignment="Center"
                   Text="PUSHUP TIME _/\(^_^)/\_"
                   FontWeight="Bold"
                   Foreground="#d9534f"/>

    </StackPanel>
</Window>